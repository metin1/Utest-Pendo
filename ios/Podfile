source 'https://github.com/pendo-io/specs.git'
source 'https://github.com/CocoaPods/Specs.git'

require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'
require_relative '../node_modules/react-native-unimodules/cocoapods.rb'

platform :ios, '10.0'

target 'rnn_starter' do
  use_unimodules!(exclude: ['expo-splash-screen'])
  config = use_native_modules!

  use_react_native!(:path => config["reactNativePath"])

  target 'rnn_starterTests' do
    inherit! :complete
    # Pods for testing
  end

  # Enables Flipper.
  #
  # Note that if you have use_frameworks! enabled, Flipper will not work and
  # you should disable these next few lines.
  use_flipper!
  post_install do |installer|
    flipper_post_install(installer)
  end
end

target 'rnn_starter-tvOS' do
  # Pods for rnn_starter-tvOS

  target 'rnn_starter-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
  end
end
